      </layout>
   </appender> -->
   
   <!-- Application Loggers -->
   <logger name="com.kh.spring">
      <level value="debug" />
   </logger>
   
   <!-- 3rdparty Loggers -->
   <logger name="org.springframework.core">
      <level value="info" />
   </logger>
   
   <logger name="org.springframework.beans">
      <level value="info" />
   </logger>
   
   <logger name="org.springframework.context">
      <level value="info" />
   </logger>

   <logger name="org.springframework.web">
      <level value="info" />
   </logger>
   
   	<!-- Application Loggers -->
	<logger name="com.mgr.merry">
	<!--개발 끝나면 info로 바꿔줌  -->
    <!-- <level value="info" /> -->
             <level value="debug" />
	<!-- level은 단계를 의미  -->
	<!-- trace(잘 안씀) -> debug(개발시에 사용하는 로그들) -> info(상태변경, 정보성 메시지)
	     -> warn(프로그램 실행에 문제는 없지만 향후 시스템 에러의 원인이 될 수 있다는 경고메시지) 
	     -> error(어떤 요청을 처리할 때 발생한 문제, 프로그램이 동작되지 않음)
	     -> fatal(아주 심각한 에러, 메모리에 대한 손상, 운영체제 손상) -->
         

	</logger>

   <!-- Root Logger -->
   <root>
      <priority value="warn" />
      <appender-ref ref="console" />
      <appender-ref ref="filelogger"/>
   </root>
   
</log4j:configuration>